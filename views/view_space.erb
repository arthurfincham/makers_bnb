  </div>
  <div class="row g-0 w-100 d-flex justify-content-center">
    <div class="col-md-6">
      <%= partial :image_carousel %>
    </div>
    <div class="col-md-3 d-flex flex-column card p-1 mx-3 justify-content-center">
    <div class="d-flex align-items-center text-center mx-2 mt-5">
      <p><%= @space.description %></p>
    </div>
      <div class="w-100 d-flex  justify-content-center">

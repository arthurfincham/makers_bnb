<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src="<%=@space.url%>" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700"
        height="500" loading="lazy">
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3"><%= @space.name%></h1>
      <p class="lead"><%= @space.description%></p>
      <div class="d-flex justify-content-center">
        <div class="input-group w-25 m-5">
          <span class="input-group-text">Â£</span>
          <span type="text" name="price" class="form-control" id="listing-price"
            aria-label="Amount (to the nearest dollar)"><%= @space.price %><small class="fst-italic text-muted"> per
              night</small></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <h2 class="display-6 fw-bold lh-1 mb-3">Choose a date for your holiday:</h2>
    <ul class="d-flex list-group list-group-horizontal flex-wrap p-5 justify-content-between">
      <% @availability.each do |date| %>
        <li class="w-14 list-group-item d-flex p-0" id="list-group-item">
          <form action="/bookings/new" method="post" class="w-100 d-flex">
            <button class="btn-light btn-outline-danger w-100 btn-lg" type="submit" name="start_date" id="listing_fromdate" value="<%= date %>">
              <%= Date::strptime(date, "%Y-%m-%d").strftime('%d/%m/%Y') %>
            </button>
            <input type="hidden" name="end_date" id="listing_todate" value="<%= date %>">
            <input type="hidden" name="space_id" value="<%= @space.id %>">
           <input type="hidden" name="host_id" value="<%= @space.user_id %>">
          </form>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<h1>Requests I've made:</h1>
<% @my_requests.each do |request| %>
  <div>
    <h3>I have requested a booking at: <%= request.space_id %></h3>
    <h3>I have requested to stay from <%= Time.parse(request.start_date) %> - <%= request.end_date %></h3>
  </div>
<% end %>

<h1>Requests I've received:</h1>
<% @incoming_requests.each do |request| %>
  <% renter = User.find(id: request.user_id)  %>
  <div>
    <h3><%= renter.name %> has requested to book space <%= request.space_id %> from <%= request.start_date %> to <%= request.end_date %></h3>
  </div>
<% end %>